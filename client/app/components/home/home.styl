@import '../../../styles'
// edit()

body
  box-sizing border-box

h1, h2, h3, h4
  font-family 'Work Sans', sans-serif
  font-weight 100

h1
  font-size 5rem

h2
  font-size 2.5rem

h3
  font-size 1.3rem
  margin 0

h4
  font-size 1.2rem
  margin 0

p
  font-weight 100


.home
  article
    width 100%
  .hero
    height 300px
    background-image url(../../../images/code_hands_blue.jpg)
    background-size cover
    color white
    .title
      text-align center
      overflow hidden
      h1
        margin-top 100px

    +below(662px)
      .title
        h1
          font-size 4rem
    +below(531px)
      .title
        h1
          font-size 3rem

  .newsletter
    box-sizing border-box
    height 90px
    background-color accent-dark
    color white
    font-size 1rem
    font-weight 300
    padding 10px
    .newsletter-wrapper
      margin-top 15px
      center(900px)
      .news-message
        col(1/3, gutter: .5)
        text-align right
      .news-input
        col(1/3, gutter: .3)
        .email-input
          background transparent
          color white
          font-size .75rem
          padding .25rem
          border 2px solid white
          border-radius 3px
          width 100%
          height 100%
          &:focus
            outline none
            border-color white
            box-shadow 0 0 10px white
      .news-submit
        col(1/3)
        .email-submit
          border 2px solid navbar-color
          border-radius 5px
          font-size 1rem
          background transparent
          color white
          button
            border-radius 5px
            border 2px solid navbar-color
            padding 2px 20px
            color navbar-color
            &:hover
              background navbar-color
              color white
              border 2px solid navbar-color
            &:focus
              outline none
              border 2px solid navbar-color
        button
          border-radius 5px
          border 2px solid navbar-color
          padding 2px 20px
          color navbar-color
          &:hover
            background navbar-color
            color white
            border 2px solid navbar-color
          &:focus
            outline none

    +below(900px)
      .newsletter-wrapper
        center(800px)
        .news-message
          h3
            font-size 1.2rem
        .news-submit
          button
            padding 2px 40px
    +below(725px)
      .newsletter-wrapper
        center(625px)
        .news-message
          h3
            font-size 1rem
        .news-input
          .email-input
            width 100%
        .news-submit
          .email-submit
            font-size 1rem
          button
            padding 2px 20px
    +below(625px)
      height 130px
      .newsletter-wrapper
        margin 10px 0
        center(300px)
        .news-message, .news-input, .news-submit
          stack(center)
          text-align center
          margin-bottom 3px
        .news-input
          .email-input
            width 100%
        .news-submit
          width 100%
          .email-submit
            width 100%
          button
            padding 2px 40px

  .not-another-bootcamp
    height 450px
    background-color white
    color primary-dark
    padding 20px
    .not-another-bootcamp-wrapper
      center(900px)
      margin-top 30px
      .text-wrapper
        .bootcamp-message-wrapper
          display inline
          overflow hidden
          h2
            text-transform uppercase
            line-height 40px
            span
              display block
          p
            font-size 1rem
            margin-top 5px
      .benefits-wrapper
        font-weight 300
        font-size .8rem
        .benefit-column-1
          col(1/2, gutter: .5)
          padding 10px
          border 2px solid primary-dark
        .benefit-column-2
          col(1/2)
          padding 10px
          border 2px solid primary-dark


    +below(800px)
      .not-another-bootcamp-wrapper
        center(700px)
        .text-wrapper
          .bootcamp-message-wrapper
            p
              font-size .8rem
        .benefits-wrapper
          center(700px)
    +below(595px)
      .not-another-bootcamp-wrapper
        center(550px)
        margin-top 20px
        .text-wrapper
          h2
            margin-top 0
        .benefits-wrapper
            margin-bottom 15px
            .benefits
              stack(center)
              margin-top 5px
    +below(535px)
      height 500px


  .competitive-advantage
    border-top 1px solid #cccccc
    border-bottom 1px solid #cccccc
    height 350px
    background-color primary-dark
    color white
    padding 20px
    .competitive-advantage-wrapper
      center(900px)
      margin-top 55px
      h2
        text-transform uppercase
        margin-top 0
      p
        font-size 1rem

    +below(800px)
      padding 15px
      .competitive-advantage-wrapper
        center(700px)
        margin-top 30px
        p
          font-size .8rem
    +below(636px)
      .competitive-advantage-wrapper
        center(600px)
    +below(595px)
      .competitive-advantage-wrapper
        center(500px)


  .accomplishments
    border-bottom 1px solid #cccccc
    height 500px
    background-color accent-dark
    color white
    padding 20px
    *
      margin 20px 0
    .accomplishments-wrapper
      center(900px)
      margin-top 65px
      h2
        text-transform uppercase
        text-align center
      .badges-wrapper
        .badge
          col(1/4, gutter: 0)
          padding 10px
          img
            height auto
            width auto\9
            display block
            margin auto
          h4
            text-align center

    +below(800px)
      height 425px
      padding 10px
      .accomplishments-wrapper
        center(700px)
        margin-top 35px
    +below(636px)
      .accomplishments-wrapper
        center(600px)
        margin-top 25px
    +below(595px)
      height 1000px
      .accomplishments-wrapper
        center(500px)
        .badges-wrapper
          .badge
            stack(center)


  .guarantee
    height 350px
    background-color white
    color #006D86
    padding 20px
    .guarantee-wrapper
      center(900px)
      margin-top 55px
      .guarantee-message-wrapper
        overflow hidden
        margin-top 0
        h2
          text-transform uppercase
          margin-top 0
        p
          font-size 1rem
        .guarantee-message-offer
          font-size 1.3rem

    +below(800px)
      .guarantee-wrapper
        center(800px)
    +below(636px)
      height 300px
      .guarantee-wrapper
        center(700px)
        margin-top 15px
        .guarantee-message-wrapper
          h2
            text-align center
          p
            font-size .8rem

  .footer
    height 400px
    background-color #2c2c2c
    .footer-wrapper
      center(900px)
      position relative
      height 100%
      p
        position absolute
        bottom 0
        right 0
        color #B9B9B9
        font-size .3rem



