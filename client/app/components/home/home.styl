@import '../../../styles'
edit()

body
  box-sizing border-box

h1, h2, h3
  font-family 'Work Sans', sans-serif

h2
  font-size 2.5rem
  font-weight 100

h3
  font-size 1.2rem
  weight 100
  margin 0

p
  font-weight 100

.home
  article
    width 100%
  .hero
    height 300px
    background-image url(../../../images/websitecode.jpeg)
    background-size cover
    color white
    .title
      text-align center
      overflow hidden
      h1
        font-size 5rem
        font-weight 100
        margin-top 100px

  .newsletter
    box-sizing border-box
    height 90px
    background-color #FF7F00
    color white
    font-size 1rem
    font-weight 300
    padding 10px
    .info
      margin-top 15px
    .news-message
      span(1/4, 1/6)
      padding 4px 0
      text-align center
      margin-right 10px
    .news-input
      col(1/4)
      .email-input
        line-height 19px
        width 100%
        height 100%
        background transparent
        z-index 100
        color black
        font-size .8rem
        &:focus
          outline none
    .news-submit
      .email-submit
        border 2px solid #005467
        border-radius 5px
      button
        line-height 19px
        background-color inherit
        padding 5px 20px
        border-radius 5px
        border 2px solid #005467
        &:hover
          color #A75300
          border 2px solid #A75300
        &:focus
          outline none

  .not-another-bootcamp
    height 600px
    background-color white
    color #006D86
    padding 10px
    *
      margin 15px 0
    .not-another-bootcamp-wrapper
      margin-top 40px
      center(900px)
      padding 10px
      .bootcamp-message-wrapper
        display inline
        overflow hidden
        margin-right 30px
        h2
          text-transform uppercase
        p
          font-size 1rem
    .benefits-wrapper
      center(900px)
      font-weight 300
      font-size .8rem
      .benefit-column-1
        col(4/8)
        padding 10px
        border 2px solid #006D86
      .benefit-column-2
        col(4/8)
        padding 10px
        border 2px solid #006D86


    @media screen and (max-width: 900px)
      .not-another-bootcamp-wrapper
        center(700px)
        .bootcamp-message-wrapper
          p
            font-size .8rem
      .benefits-wrapper
        center(700px)



  .competitive-advantage
    height 350px
    background-color #FFFAF5
    color #006D86
    padding 20px
    *
      margin 20px 0
    .competitive-advantage-wrapper
      center(900px)
      margin-top 45px
      h2
        text-transform uppercase
      p
        font-size 1rem

    @media screen and (max-width: 900px)
      padding 15px
      .competitive-advantage-wrapper
        center(700px)

  .accomplishments
    height 500px
    background-color #CDF5FF
    color #006D86
    padding 20px
    *
      margin 20px 0
    .accomplishments-wrapper
      center(900px)
      margin-top 65px
      h2
        text-transform uppercase
        text-align center
      .badges-wrapper
        .badge
          col(1/4)
          padding 10px
          img
            height auto
            width auto\9
            display block
            margin auto
          p
            text-align justify
            font-weight 100
            font-size .8rem

    @media screen and (max-width: 900px)
      height 600px
      padding 10px
      .accomplishments-wrapper
        center(700px)
        margin-top 40px
        .badges-wrapper
          .badge
            col(1/2, uncycle: 4, cycle: 2)

  .guarantee
    height 300px
    background-color white
    color #006D86
    padding 10px
    *
      margin 20px 0
    .guarantee-wrapper
      center(900px)
      padding 10px
      margin-top 20px
      .guarantee-message-wrapper
        overflow hidden
        h2
          text-transform uppercase
        p
          font-size 1rem
        .guarantee-message-offer
          font-size 1.3rem

    @media screen and (max-width: 900px)
      .guarantee-wrapper
        center(700px)

  .footer
    height 400px
    background-color #2c2c2c


