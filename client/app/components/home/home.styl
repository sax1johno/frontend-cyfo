@import '../../../styles'
// edit()

body
  box-sizing border-box

h1, h2, h3
  font-family 'Work Sans', sans-serif

h2
  font-size 2.5rem
  font-weight 100

h3
  font-size 1.5rem
  weight 100
  margin 0

p
  font-weight 100

.home
  article
    width 100%
  .hero
    height 300px
    background-image url(../../../images/code_hands_blue.jpg)
    background-size cover
    color white
    .title
      text-align center
      overflow hidden
      h1
        font-size 5rem
        font-weight 100
        margin-top 100px

    +below(662px)
      .title
        h1
          font-size 4rem
    +below(531px)
      .title
        h1
          font-size 3rem

  .newsletter
    box-sizing border-box
    height 90px
    background-color accent-dark
    color white
    font-size 1rem
    font-weight 300
    padding 10px
    .newsletter-wrapper
      margin-top 15px
      center(900px)
      .news-message
        col(1/3, gutter: .5)
        text-align right
      .news-input
        col(1/3, gutter: .3)
        .email-input
          background transparent
          color white
          font-size .75rem
          padding .25rem
          border: 2px solid white;
          border-radius: 3px;
          border-width: 2px;
          width 100%
          height 100%
          &:focus
            outline none
            border-color: white;
            box-shadow: 0 0 10px white;
            
      .news-submit
        col(1/3)
        .email-submit
          border 2px solid navbar-color
          border-radius 5px
          font-size 1rem
          background: transparent;
          color: white;
          button
            border-radius 5px
            border 2px solid navbar-color
            padding 2px 20px
            color: navbar-color;
            &:hover
              background: navbar-color;
              color white
              border 2px solid navbar-color;
            &:focus
              outline none
              border 2px solid navbar-color;
        button
          border-radius 5px
          border 2px solid navbar-color
          padding 2px 20px
          color: navbar-color;
          &:hover
            background: navbar-color
            color white
            border 2px solid navbar-color
          &:focus
            outline none

    +below(625px)
      height 100px
      .newsletter-wrapper
        margin-top 2px
        center(300px)
        .news-message, .news-input, .news-submit
          stack(center)
          text-align center
          margin-bottom 3px
        .news-input
          .email-input
            width 80%
        .news-submit
          button
            padding 2px 40px

  .not-another-bootcamp
    height 450px
    background-color white
    color primary-dark
    padding 20px
    .not-another-bootcamp-wrapper
      center(900px)
      margin-top 30px
      .text-wrapper
        .bootcamp-message-wrapper
          display inline
          overflow hidden
          h2
            text-transform uppercase
            line-height 40px
            span
              display block
          p
            font-size 1rem
            margin-top 5px
      .benefits-wrapper
        font-weight 300
        font-size .8rem
        .benefit-column-1
          col(1/2, gutter: .5)
          padding 10px
          border 2px solid primary-dark
        .benefit-column-2
          col(1/2)
          padding 10px
          border 2px solid primary-dark


    +below(3)
      .not-another-bootcamp-wrapper
        center(700px)
        .text-wrapper
          .bootcamp-message-wrapper
            p
              font-size .8rem
        .benefits-wrapper
          center(700px)
    +below(595px)
      .not-another-bootcamp-wrapper
        center(550px)
        margin-top 20px
        .text-wrapper
          h2
            margin-top 0
        .benefits-wrapper
            margin-bottom 15px
            .benefits
              stack(center)
              margin-top 5px


  .competitive-advantage
    border-top 1px solid #cccccc
    border-bottom 1px solid #cccccc
    height 350px
    background-color primary-dark
    color white
    padding 20px
    .competitive-advantage-wrapper
      center(900px)
      margin-top 55px
      h2
        text-transform uppercase
        margin-top 0
      p
        font-size 1rem

    +below(3)
      padding 15px
      .competitive-advantage-wrapper
        center(700px)
        margin-top 30px
    +below(636px)
      .competitive-advantage-wrapper
        center(600px)
        margin-top 20px
    +below(595px)
      .competitive-advantage-wrapper
        center(500px)
        margin-top 10px
        margin-bottom 10px


  .accomplishments
    border-bottom 1px solid #cccccc
    height 500px
    background-color accent-dark
    color white
    padding 20px
    *
      margin 20px 0
    .accomplishments-wrapper
      center(900px)
      margin-top 65px
      h2
        text-transform uppercase
        text-align center
      .badges-wrapper
        .badge
          col(1/4, gutter: .1)
          padding 10px
          background-color #B2D3DA
          img
            height auto
            width auto\9
            display block
            margin auto
          p
            text-align justify
            font-weight 100
            font-size .8rem

    +below(800px)
      height 425px
      padding 10px
      .accomplishments-wrapper
        center(700px)
        margin-top 35px
    +below(636px)
      .accomplishments-wrapper
        center(600px)
        margin-top 25px
    +below(595px)
      height 1000px
      .accomplishments-wrapper
        center(500px)
        .badges-wrapper
          .badge
            stack(center)


  .guarantee
    height 300px
    background-color white
    color #006D86
    padding 10px
    .guarantee-wrapper
      center(900px)
      margin-top 60px
      .guarantee-message-wrapper
        overflow hidden
        margin-top 0
        h2
          text-transform uppercase
          margin-top 0
        p
          font-size 1rem
        .guarantee-message-offer
          font-size 1.3rem

    +below(800px)
      .guarantee-wrapper
        center(800px)
    +below(636px)
      height 250px
      .guarantee-wrapper
        center(700px)
        margin-top 15px
        .guarantee-message-wrapper
          h2
            text-align center


  .footer
    height 400px
    background-color #2c2c2c


